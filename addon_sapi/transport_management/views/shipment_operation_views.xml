<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="shipment_operation_form_view" model="ir.ui.view">
        <field name="name">shipment.operation.form.view</field>
        <field name="model">shipment.operation</field>
        <field name="arch" type="xml">
            <form string="Shipment Operation">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="shipment_operation_tree_view" model="ir.ui.view">
        <field name="name">shipment.operation.tree.view</field>
        <field name="model">shipment.operation</field>
        <field name="arch" type="xml">
            <tree string="Shipment Operations">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="shipment_operation_action" model="ir.actions.act_window">
        <field name="name">Shipment Operations</field>
        <field name="res_model">shipment.operation</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>