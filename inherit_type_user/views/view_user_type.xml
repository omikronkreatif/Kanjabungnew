<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="res_user_inherit_form_type_user" model="ir.ui.view">
            <field name="name">res.user.inherit.form.type.user</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='login']" position="after">
                        <div>
                            <label for="tipe_user"/>
                            <field name="tipe_user"/>
                        </div>
                </xpath>
            </field>
        </record>
</odoo>